u = [2,4,6]                         # µ1, µ2, µ3
uPoints = []                        # points belonging to µ1, µ2, µ3
points = [2,3,4,10,11,12,20,25,30]  # Our data
change = True                       # True iff centroids change
lowestDist = -1
while(change):
    change = False
    uPoints = [[], [], []]

    # Assign points to centroids
    for point in points:
        min = 35
        for x in range(len(u)):
            if min > abs(u[x] - point):
                min = abs(u[x] - point)
                lowestDist = x
        uPoints[lowestDist].append(point)
    
    for x in range(len(u)):
        # Print values
        print(f'µ{x}: {u[x]} || List: {uPoints[x]}')
        # Calculate new centroids
        # Check if centroids change
        oldValue = u[x]
        u[x] = sum(uPoints[x])/len(uPoints[x])
        if oldValue != u[x]:
            change = True
